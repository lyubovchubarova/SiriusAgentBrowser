{
	"manifest_version": 3,
	"name": "Sirius Agent Browser",
	"version": "1.0",
	"description": "AI Agent Side Panel for Browser Control",
	"permissions": ["sidePanel", "offscreen", "audio"],
	"side_panel": {
		"default_path": "sidepanel.html"
	},
	"action": {
		"default_title": "Open Agent Chat"
	},
	"background": {
		"service_worker": "background.js"
	}
}
